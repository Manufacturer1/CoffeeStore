@model CoffeeStore.Models.UserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}

<div class="container" style="margin-top:200px">
    <div class="row">
        <div class="col-md-6">
            <div class="card" style="width:750px">
                <div class="card-body">
                    <h3 class="card-title" style="color:black">Welcome, @Model.Name!</h3>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Username:</strong> @Model.UserName</p>
                    <p class="card-text"><strong>Address:</strong> @Model.Address</p>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Edit", "EditClientProfile", "Account", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Change Password", "ChangePassword", "Account", null, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("View Products", "ViewAllProducts", "Account", null, new { @class = "btn btn-info" })
                    @Html.ActionLink("Set Discount", "DiscountPage", "Account", null, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Set Delivery Cost", "DeliveryPage", "Account", null, new { @class = "btn btn-success" })



                </div>
            </div>
        </div>
    </div>

    <h3>Other Users:</h3>
    <div class="row">
        @foreach (var user in ViewBag.Users)
        {
            if (user.Name != "Application Admin")
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="color:black">@user.UserName</h5>
                            <p class="card-text"><strong>Email:</strong> @user.Email</p>
                            <p class="card-text"><strong>Name:</strong> @user.Name</p>
                            <p class="card-text"><strong>Address:</strong> @user.Address</p>

                            <!-- Delete user form -->
                            @using (Html.BeginForm("DeleteUser", "Account", new { username = user.UserName }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-danger">Delete</button>
                               
                            }
                            @Html.ActionLink("View Reservations","ReservationDetails",new {userId = user.Id }, new {@class="btn btn-primary btn-outline-primary"})
                            @Html.ActionLink("View Orders", "OrdersDetails", "Account", new {userId = user.Id}, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
